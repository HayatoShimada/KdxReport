@page "/reports"
@using KdxReport.Services
@using KdxReport.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject TripReportService TripReportService
@inject NavigationManager Navigation

<PageTitle>報告書一覧 - 出張報告書システム</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-list me-2"></i>報告書一覧
            </h2>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-12">
            <button class="btn btn-primary" @onclick="CreateNewReport">
                <i class="fas fa-plus me-2"></i>新規報告書作成
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">読み込み中...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>報告書ID</th>
                                        <th>会社名</th>
                                        <th>担当者</th>
                                        <th>設備</th>
                                        <th>出張期間</th>
                                        <th>提出者</th>
                                        <th>承認状況</th>
                                        <th>作成日</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (reports.Count == 0)
                                    {
                                        <tr>
                                            <td colspan="9" class="text-center py-4">
                                                <i class="fas fa-inbox me-2"></i>報告書が登録されていません。
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var report in reports)
                                        {
                                            <tr style="cursor: pointer;" @onclick="() => ViewReport(report.TripReportId)">
                                                <td>@report.TripReportId</td>
                                                <td>@report.Company?.CompanyName</td>
                                                <td>@report.Contact?.ContactName</td>
                                                <td>@report.Equipment?.EquipmentName</td>
                                                <td>
                                                    @report.TripStartDate.ToString("yyyy/MM/dd") - @report.TripEndDate.ToString("yyyy/MM/dd")
                                                </td>
                                                <td>@report.Submitter</td>
                                                <td>
                                                    @if (report.ApprovalStatus == "approved")
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check me-1"></i>承認済み
                                                        </span>
                                                    }
                                                    else if (report.ApprovalStatus == "rejected")
                                                    {
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-times me-1"></i>却下
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="fas fa-clock me-1"></i>承認待ち
                                                        </span>
                                                    }
                                                </td>
                                                <td>@report.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                                <td>
                                                    <button class="btn btn-sm btn-info" @onclick="() => ViewReport(report.TripReportId)" @onclick:stopPropagation="true">
                                                        <i class="fas fa-eye"></i> 詳細
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<TripReport> reports = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadReports();
    }

    private async Task LoadReports()
    {
        isLoading = true;
        try
        {
            reports = await TripReportService.GetAllReportsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"データの読み込みに失敗しました: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void CreateNewReport()
    {
        Navigation.NavigateTo("/reports/create");
    }

    private void ViewReport(int reportId)
    {
        Navigation.NavigateTo($"/reports/{reportId}");
    }
}
