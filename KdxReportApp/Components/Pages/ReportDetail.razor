@page "/reports/{ReportId:int}"
@using KdxReport.Services
@using KdxReport.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Markdig
@attribute [Authorize]
@rendermode InteractiveServer
@inject TripReportService TripReportService
@inject AuthService AuthService
@inject FileStorageService FileStorageService
@inject NavigationManager Navigation
@inject ILogger<ReportDetail> Logger

<PageTitle>報告書詳細 - 出張報告書システム</PageTitle>

<div class="container-fluid mt-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">読み込み中...</span>
            </div>
        </div>
    }
    else if (report == null)
    {
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            指定された報告書が見つかりませんでした。
        </div>
        <button class="btn btn-secondary" @onclick="BackToList">
            <i class="fas fa-arrow-left me-2"></i>一覧に戻る
        </button>
    }
    else
    {
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @successMessage
                <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @errorMessage
                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
            </div>
        }

        <!-- ヘッダー -->
        <div class="row mb-4">
            <div class="col-md-8">
                <h2>
                    <i class="fas fa-file-alt me-2"></i>@report.Title
                </h2>
                <p class="text-muted">報告書 #@report.TripReportId</p>
            </div>
            <div class="col-md-4 text-md-end">
                <button class="btn btn-secondary" @onclick="BackToList">
                    <i class="fas fa-arrow-left me-2"></i>一覧に戻る
                </button>
            </div>
        </div>

        <!-- 承認ステータスと承認ボタン -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">承認状況</h5>
                                @if (report.ApprovalStatus == "approved")
                                {
                                    <span class="badge bg-success fs-6 mt-2">
                                        <i class="fas fa-check me-1"></i>承認済み
                                    </span>
                                    @if (report.Approver != null && report.ApprovedAt.HasValue)
                                    {
                                        <p class="text-muted small mt-2 mb-0">
                                            承認者: @report.Approver.UserName (@report.ApprovedAt.Value.ToString("yyyy/MM/dd HH:mm"))
                                        </p>
                                    }
                                }
                                else if (report.ApprovalStatus == "rejected")
                                {
                                    <span class="badge bg-danger fs-6 mt-2">
                                        <i class="fas fa-times me-1"></i>却下
                                    </span>
                                    @if (report.Approver != null && report.ApprovedAt.HasValue)
                                    {
                                        <p class="text-muted small mt-2 mb-0">
                                            却下者: @report.Approver.UserName (@report.ApprovedAt.Value.ToString("yyyy/MM/dd HH:mm"))
                                        </p>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark fs-6 mt-2">
                                        <i class="fas fa-clock me-1"></i>承認待ち
                                    </span>
                                }
                            </div>
                            @if (report.ApprovalStatus == "pending" && isAdmin)
                            {
                                <div>
                                    <button class="btn btn-success me-2" @onclick="ApproveReport" disabled="@isProcessing">
                                        @if (isProcessing)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        <i class="fas fa-check me-2"></i>承認
                                    </button>
                                    <button class="btn btn-danger" @onclick="RejectReport" disabled="@isProcessing">
                                        @if (isProcessing)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        <i class="fas fa-times me-2"></i>却下
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 報告書基本情報 -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>基本情報</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>会社:</strong> @report.CompanyCd
                            </div>
                            <div class="col-md-6">
                                <strong>担当者:</strong> @report.CustomerCd / @report.StaffCd
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>設備:</strong> @report.Equipment?.EquipmentName
                            </div>
                            <div class="col-md-6">
                                <strong>出張期間:</strong> @report.TripStartDate.ToString("yyyy/MM/dd") 〜
                                @report.TripEndDate.ToString("yyyy/MM/dd")
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>提出者:</strong> @report.Submitter
                            </div>
                            <div class="col-md-6">
                                <strong>同伴者:</strong> @(string.IsNullOrWhiteSpace(report.Companions) ? "なし" :
                                                            report.Companions)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <strong>作成日:</strong> @report.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <!-- 報告内容 -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>報告内容</h5>
                    </div>
                    <div class="card-body markdown-content">
                        @((MarkupString)renderedContent)
                    </div>
                </div>
            </div>
        </div>

        <!-- 添付ファイル -->
    @if (attachments.Count > 0)
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0"><i class="fas fa-paperclip me-2"></i>添付ファイル (@attachments.Count)</h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                @foreach (var attachment in attachments)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                @if (FileStorageService.IsImageFile(attachment.FileName))
                                                {
                                                    <i class="fas fa-image text-primary me-2"></i>
                                                }
                                                else if (FileStorageService.IsPdfFile(attachment.FileName))
                                                {
                                                    <i class="fas fa-file-pdf text-danger me-2"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-file me-2"></i>
                                                }
                                                <strong>@attachment.FileName</strong>
                                                <span class="text-muted ms-2">(@GetFileSizeString(attachment.FileSize))</span>
                                            </div>
                                            <button class="btn btn-sm btn-primary" @onclick="() => DownloadFile(attachment)">
                                                <i class="fas fa-download me-1"></i>ダウンロード
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- スレッド・コメント -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-comments me-2"></i>スレッド・コメント</h5>
                        <button class="btn btn-light btn-sm" @onclick="ShowNewThreadDialog">
                            <i class="fas fa-plus me-1"></i>新規スレッド作成
                        </button>
                    </div>
                    <div class="card-body">
                        @if (threads.Count == 0)
                        {
                            <div class="text-center py-4 text-muted">
                                <i class="fas fa-comments fa-3x mb-3"></i>
                                <p>まだスレッドがありません。新規スレッドを作成してください。</p>
                            </div>
                        }
                        else
                        {
                            @foreach (var thread in threads)
                            {
                                <div class="thread-item mb-4 border-bottom pb-4">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h6 class="mb-1">
                                                <i class="fas fa-comment-dots me-2"></i>@thread.ThreadName
                                            </h6>
                                            <small class="text-muted">
                                                作成日: @thread.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                                                @if (thread.UpdatedAt != thread.CreatedAt)
                                                {
                                                    <span> | 最終更新: @thread.UpdatedAt.ToString("yyyy/MM/dd HH:mm")</span>
                                                }
                                            </small>
                                        </div>
                                    </div>

                                    <!-- コメント一覧 -->
                                    @{
                                        var topLevelComments = thread.Comments.Where(c => c.ParentCommentId == null).OrderBy(c =>
                                        c.CreatedAt).ToList();
                                    }
                                    @foreach (var comment in topLevelComments)
                                    {
                                        <div class="comment-item mb-3">
                                            @RenderComment(comment, 0)
                                        </div>
                                    }

                                    @if (topLevelComments.Count == 0)
                                    {
                                        <div class="text-muted small mb-3">まだコメントがありません。</div>
                                    }

                                    <!-- 新規コメント投稿フォーム -->
                                    <div class="new-comment-form mt-3">
                                        <div class="input-group">
                                            <textarea 
                                                class="form-control" 
                                                value="@GetNewCommentText(thread.ThreadId)"
                                                @oninput="@((ChangeEventArgs e) => SetNewCommentText(thread.ThreadId, e.Value?.ToString() ?? string.Empty))"
                                                placeholder="コメントを入力してください..." 
                                                rows="2">@GetNewCommentText(thread.ThreadId)</textarea>
                                            <button class="btn btn-primary" @onclick="() => PostComment(thread.ThreadId, null)"
                                                disabled="@isPostingComment">
                                                <i class="fas fa-paper-plane me-1"></i>投稿
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

    }
    }
</div>

<!-- 新規スレッド作成モーダル -->
@if (showNewThreadDialog)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);"
        @onclick="CloseNewThreadDialog">
        <div class="modal-dialog modal-dialog-centered" @onclick:stopPropagation="true">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-plus me-2"></i>新規スレッド作成</h5>
                    <button type="button" class="btn-close" @onclick="CloseNewThreadDialog"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="newThreadName" class="form-label">スレッド名 <span class="text-danger">*</span></label>
                        <InputText id="newThreadName" class="form-control" @bind-Value="newThreadName"
                            placeholder="例: 報告内容について" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseNewThreadDialog">キャンセル</button>
                    <button type="button" class="btn btn-primary" @onclick="CreateNewThread"
                        disabled="@(string.IsNullOrWhiteSpace(newThreadName) || isCreatingThread)">
                        @if (isCreatingThread)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="fas fa-check me-1"></i>作成
                    </button>
                </div>
            </div>
        </div>
    </div>
}

