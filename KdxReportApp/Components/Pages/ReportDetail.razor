@code {
    [Parameter]
    public int ReportId { get; set; }

    private TripReport? report;
    private List<Attachment> attachments = new();
    private List<Models.Thread> threads = new();
    private string renderedContent = string.Empty;
    private bool isLoading = true;
    private bool isProcessing = false;
    private bool isAdmin = false;
    private string? successMessage;
    private string? errorMessage;
    private int currentUserId;
    private bool showNewThreadDialog = false;
    private string newThreadName = string.Empty;
    private bool isCreatingThread = false;
    private bool isPostingComment = false;
    private Dictionary<int, string> newCommentTexts = new(); // threadId -> comment text
    private Dictionary<int, int?> replyingTo = new(); // threadId -> parentCommentId

    protected override async Task OnInitializedAsync()
    {
        await LoadReportAsync();
        await CheckUserRole();
    }

    private async Task CheckUserRole()
    {
        try
        {
            var currentUser = await AuthService.GetCurrentUserAsync();
            if (currentUser != null)
            {
                currentUserId = currentUser.UserId;
                isAdmin = currentUser.RoleUsers.Any(ru => ru.Role.RoleName == "Admin");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error checking user role");
        }
    }

    private async Task LoadReportAsync()
    {
        isLoading = true;
        try
        {
            report = await TripReportService.GetReportByIdAsync(ReportId);

            if (report != null)
            {
                // Markdown コンテンツをレンダリング
                var pipeline = new MarkdownPipelineBuilder().UseAdvancedExtensions().Build();
                renderedContent = Markdown.ToHtml(report.Content ?? string.Empty, pipeline);

                // 添付ファイルを取得
                attachments = report.Threads
                .SelectMany(t => t.Attachments)
                .ToList();

                // スレッドを取得
                threads = await TripReportService.GetThreadsByReportIdAsync(ReportId);

                // 既読マークを付ける
                if (currentUserId > 0)
                {
                    await TripReportService.MarkAsReadAsync(currentUserId, ReportId);
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"報告書の読み込みに失敗しました: {ex.Message}";
            Logger.LogError(ex, "Error loading report {ReportId}", ReportId);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ApproveReport()
    {
        if (report == null || currentUserId == 0) return;

        isProcessing = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var result = await TripReportService.ApproveReportAsync(ReportId, currentUserId);
            if (result)
            {
                successMessage = "報告書を承認しました。";
                await LoadReportAsync();
            }
            else
            {
                errorMessage = "承認処理に失敗しました。";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"承認処理中にエラーが発生しました: {ex.Message}";
            Logger.LogError(ex, "Error approving report {ReportId}", ReportId);
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task RejectReport()
    {
        if (report == null || currentUserId == 0) return;

        isProcessing = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var result = await TripReportService.RejectReportAsync(ReportId, currentUserId);
            if (result)
            {
                successMessage = "報告書を却下しました。";
                await LoadReportAsync();
            }
            else
            {
                errorMessage = "却下処理に失敗しました。";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"却下処理中にエラーが発生しました: {ex.Message}";
            Logger.LogError(ex, "Error rejecting report {ReportId}", ReportId);
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task DownloadFile(Attachment attachment)
    {
        try
        {
            var presignedUrl = await FileStorageService.GetPresignedUrlAsync(attachment.FilePath, 3600);
            Navigation.NavigateTo(presignedUrl, true);
        }
        catch (Exception ex)
        {
            errorMessage = $"ファイルのダウンロードに失敗しました: {ex.Message}";
            Logger.LogError(ex, "Error downloading file {FileName}", attachment.FileName);
        }
    }

    private string GetFileSizeString(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private void BackToList()
    {
        Navigation.NavigateTo("/reports");
    }

    private void ShowNewThreadDialog()
    {
        newThreadName = string.Empty;
        showNewThreadDialog = true;
    }

    private void CloseNewThreadDialog()
    {
        showNewThreadDialog = false;
        newThreadName = string.Empty;
    }

    private async Task CreateNewThread()
    {
        if (string.IsNullOrWhiteSpace(newThreadName))
        {
            errorMessage = "スレッド名を入力してください。";
            return;
        }

        isCreatingThread = true;
        errorMessage = null;

        try
        {
            await TripReportService.CreateThreadForReportAsync(ReportId, newThreadName.Trim());
            successMessage = "スレッドを作成しました。";
            CloseNewThreadDialog();
            await LoadReportAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"スレッドの作成に失敗しました: {ex.Message}";
            Logger.LogError(ex, "Error creating thread for report {ReportId}", ReportId);
        }
        finally
        {
            isCreatingThread = false;
        }
    }

    private string GetNewCommentText(int threadId)
    {
        if (!newCommentTexts.ContainsKey(threadId))
        {
            newCommentTexts[threadId] = string.Empty;
        }
        return newCommentTexts[threadId];
    }

    private void SetNewCommentText(int threadId, string value)
    {
        newCommentTexts[threadId] = value;
    }

    private async Task PostComment(int threadId, int? parentCommentId)
    {
        var commentText = GetNewCommentText(threadId);
        if (string.IsNullOrWhiteSpace(commentText))
        {
            errorMessage = "コメントを入力してください。";
            return;
        }

        if (currentUserId == 0)
        {
            errorMessage = "ログインが必要です。";
            return;
        }

        isPostingComment = true;
        errorMessage = null;

        try
        {
            await TripReportService.AddCommentToThreadAsync(threadId, currentUserId, commentText.Trim(), parentCommentId);
            successMessage = parentCommentId.HasValue ? "返信を投稿しました。" : "コメントを投稿しました。";
            newCommentTexts[threadId] = string.Empty;
            replyingTo[threadId] = null;
            await LoadReportAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"コメントの投稿に失敗しました: {ex.Message}";
            Logger.LogError(ex, "Error posting comment to thread {ThreadId}", threadId);
        }
        finally
        {
            isPostingComment = false;
        }
    }

    private void StartReply(int threadId, int parentCommentId)
    {
        replyingTo[threadId] = parentCommentId;
        StateHasChanged();
    }

    private void CancelReply(int threadId)
    {
        replyingTo[threadId] = null;
        StateHasChanged();
    }

    private RenderFragment RenderComment(Comment comment, int depth)
    {
        return builder =>
        {
            var sequence = 0;
            builder.OpenElement(sequence++, "div");
            builder.AddAttribute(sequence++, "class", $"comment-box mb-2" + (depth > 0 ? $" ms-{depth * 3}" : ""));
            if (depth > 0)
            {
                builder.AddAttribute(sequence++, "style", "border-left: 3px solid #dee2e6; padding-left: 1rem;");
            }

            // コメントヘッダー
            builder.OpenElement(sequence++, "div");
            builder.AddAttribute(sequence++, "class", "d-flex justify-content-between align-items-start mb-2");

            builder.OpenElement(sequence++, "div");
            builder.OpenElement(sequence++, "strong");
            builder.AddContent(sequence++, comment.User?.UserName ?? "不明なユーザー");
            builder.CloseElement();
            builder.AddMarkupContent(sequence++, $" <small class=\"text-muted\">{comment.CreatedAt:yyyy/MM/dd HH:mm}</small>");
            builder.CloseElement();

            // 返信ボタン
            if (depth < 3) // 最大3階層まで
            {
                builder.OpenElement(sequence++, "button");
                builder.AddAttribute(sequence++, "class", "btn btn-sm btn-outline-secondary");
                builder.AddAttribute(sequence++, "onclick", EventCallback.Factory.Create(this, () => StartReply(comment.ThreadId, comment.CommentId)));
                builder.AddContent(sequence++, "返信");
                builder.CloseElement();
            }
            builder.CloseElement();

            // コメント内容
            builder.OpenElement(sequence++, "div");
            builder.AddAttribute(sequence++, "class", "comment-content mb-2");
            builder.AddContent(sequence++, comment.CommentContent);
            builder.CloseElement();

            // 返信フォーム（該当する場合）
            if (replyingTo.ContainsKey(comment.ThreadId) && replyingTo[comment.ThreadId] == comment.CommentId)
            {
                builder.OpenElement(sequence++, "div");
                builder.AddAttribute(sequence++, "class", "reply-form mt-2 mb-3");
                builder.OpenElement(sequence++, "div");
                builder.AddAttribute(sequence++, "class", "input-group");

                builder.OpenElement(sequence++, "textarea");
                builder.AddAttribute(sequence++, "class", "form-control");
                builder.AddAttribute(sequence++, "rows", 2);
                builder.AddAttribute(sequence++, "placeholder", "返信を入力してください...");
                builder.AddAttribute(sequence++, "value", GetNewCommentText(comment.ThreadId));
                builder.AddAttribute(sequence++, "onchange", EventCallback.Factory.Create<Microsoft.AspNetCore.Components.ChangeEventArgs>(this, e => SetNewCommentText(comment.ThreadId, e.Value?.ToString() ?? string.Empty)));
                builder.AddContent(sequence++, GetNewCommentText(comment.ThreadId));
                builder.CloseElement();

                builder.OpenElement(sequence++, "button");
                builder.AddAttribute(sequence++, "class", "btn btn-primary");
                builder.AddAttribute(sequence++, "onclick", EventCallback.Factory.Create(this, () => PostComment(comment.ThreadId, comment.CommentId)));
                builder.AddAttribute(sequence++, "disabled", isPostingComment);
                builder.AddContent(sequence++, "投稿");
                builder.CloseElement();

                builder.OpenElement(sequence++, "button");
                builder.AddAttribute(sequence++, "class", "btn btn-secondary");
                builder.AddAttribute(sequence++, "onclick", EventCallback.Factory.Create(this, () => CancelReply(comment.ThreadId)));
                builder.AddContent(sequence++, "キャンセル");
                builder.CloseElement();

                builder.CloseElement();
                builder.CloseElement();
            }

            // 返信コメント
            if (comment.Replies != null && comment.Replies.Any())
            {
                foreach (var reply in comment.Replies.OrderBy(r => r.CreatedAt))
                {
                    builder.AddContent(sequence++, RenderComment(reply, depth + 1));
                }
            }

            builder.CloseElement();
        };
    }
