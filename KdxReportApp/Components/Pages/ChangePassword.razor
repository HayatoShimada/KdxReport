@page "/change-password"
@using KdxReport.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>パスワード変更 - 出張報告書システム</PageTitle>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">
                        <i class="fas fa-key"></i> パスワード変更
                    </h3>

                    @if (isFirstLogin)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            初回ログインのため、パスワードを変更してください。
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @successMessage
                        </div>
                    }

                    <EditForm Model="@changePasswordModel" OnValidSubmit="@HandleChangePassword" FormName="ChangePasswordForm">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label for="oldPassword" class="form-label">現在のパスワード</label>
                            <InputText id="oldPassword" type="password" class="form-control" @bind-Value="changePasswordModel.OldPassword" />
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="form-label">新しいパスワード</label>
                            <InputText id="newPassword" type="password" class="form-control" @bind-Value="changePasswordModel.NewPassword" />
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">新しいパスワード（確認）</label>
                            <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="changePasswordModel.ConfirmPassword" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>変更中...</span>
                                }
                                else
                                {
                                    <span><i class="fas fa-check me-2"></i>パスワード変更</span>
                                }
                            </button>
                            @if (!isFirstLogin)
                            {
                                <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                    <i class="fas fa-times me-2"></i>キャンセル
                                </button>
                            }
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public bool FirstLogin { get; set; }

    [SupplyParameterFromForm]
    private ChangePasswordModel changePasswordModel { get; set; } = new();

    private string? errorMessage;
    private string? successMessage;
    private bool isLoading = false;
    private bool isFirstLogin = false;
    private int currentUserId;

    protected override async Task OnInitializedAsync()
    {
        isFirstLogin = FirstLogin;

        var user = await AuthService.GetCurrentUserAsync();
        if (user != null)
        {
            currentUserId = user.UserId;
        }
    }

    private async Task HandleChangePassword()
    {
        errorMessage = null;
        successMessage = null;
        isLoading = true;

        try
        {
            if (changePasswordModel.NewPassword != changePasswordModel.ConfirmPassword)
            {
                errorMessage = "新しいパスワードと確認用パスワードが一致しません。";
                isLoading = false;
                return;
            }

            if (changePasswordModel.NewPassword.Length < 6)
            {
                errorMessage = "新しいパスワードは6文字以上で入力してください。";
                isLoading = false;
                return;
            }

            var success = await AuthService.ChangePasswordAsync(
                currentUserId,
                changePasswordModel.OldPassword,
                changePasswordModel.NewPassword
            );

            if (!success)
            {
                errorMessage = "現在のパスワードが正しくありません。";
                isLoading = false;
                return;
            }

            successMessage = "パスワードが正常に変更されました。";

            await Task.Delay(1500);
            Navigation.NavigateTo("/", forceLoad: true);
        }
        catch (Exception ex)
        {
            _ = ex;
            errorMessage = "パスワード変更中にエラーが発生しました。";
            isLoading = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/");
    }

    private class ChangePasswordModel
    {
        public string OldPassword { get; set; } = string.Empty;
        public string NewPassword { get; set; } = string.Empty;
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}
