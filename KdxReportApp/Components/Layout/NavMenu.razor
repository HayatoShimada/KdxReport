@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <i class="fas fa-briefcase me-2"></i>出張報告書システム
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <i class="fas fa-home me-2"></i> ダッシュボード
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="reports">
                        <i class="fas fa-file-alt me-2"></i> 報告書一覧
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="reports/create">
                        <i class="fas fa-plus-circle me-2"></i> 新規報告書
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="companies">
                        <i class="fas fa-building me-2"></i> 取引先管理
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="equipment">
                        <i class="fas fa-cogs me-2"></i> 設備管理
                    </NavLink>
                </div>

                <AuthorizeView Roles="Admin" Context="adminContext">
                    <Authorized Context="adminContext">
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="users">
                                <i class="fas fa-users me-2"></i> ユーザー管理
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>

            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <i class="fas fa-sign-in-alt me-2"></i> ログイン
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

